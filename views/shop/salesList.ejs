                    </div>
                </div>

                <!-- ./Left part -->
                <!-- Right Part -->
                <div class="right-part2 invoice-box">
                    <div class="p-4">
                        <div id="custom-invoice">
                            <div id="printableArea">
                                <div class="row pt-3">
                                    <div class="col-md-12">



                                        <div class="table-responsive">
                                            <table id="mainTable" class="table table-striped search-table v-middle">
                                                <thead class="header-item">
                                                    <th class="text-dark font-weight-bold">Service</th>
                                     
                                                    <th class="text-dark font-weight-bold">Amount</th>
                                                    <th class="text-center">
                                                        <div class="action-btn">
                                                            <a href="javascript:void(0)"
                                                                class="delete-multiple  text-danger"><i
                                                                    class="fas fa-trash font-20 font-medium"></i> Delete
                                                                service</a>
                                                        </div>
                                                    </th>
                                                </thead>
                                                <tbody id='extra'>
                                                    <input type="hidden" id="sLen" value="<%=user.length%>">
                                                    <% for(p=0;p<user.length; p++ ){ %>
                                                    <div>
                                                        <input type="hidden" name="serviceName"
                                                            value="<%=user[p].serviceName%>">
                                                        <input type="hidden" id="<%=user[p].serviceName%><%=p%>"
                                                            class="servicePrice" name="servicePrice"
                                                            value="<%=user[p].servicePrice%>">
                                                        <tr id="<%=p%>" class="search-items">
                                                            <td>
                                                                <span
                                                                    class="usr-email-addr"><%=user[p].serviceName%></span>
                                                            </td>
                                                           

                                                            <td>
                                                                <span class="usr-ph-no">$ <span
                                                                        id="<%=p%>Price"><%=user[p].servicePrice%>
                                                                    </span> </span>
                                                            </td>
                                                            <td class="text-center">

                                                                <div class="action-btn">



                                                                    <a onclick="deleteEmp('<%=p%>','<%=user[p].serviceName%><%=p%>')"
                                                                        class="text-dark  ml-2"><i
                                                                            class="mdi mdi-delete font-20"></i></a>
                                                                    <!--  -->
                                                                </div>

                                                            </td>
                                                        </tr>
                                                    </div>
                                                    <% } %>
                                                </tbody>
                                                <tfoot>
                                                    <tr>

                                                       
                                                        <th></th>
                                                        <th><label class="text-center">Sub Total Discount: </label></th>
                                                        <th>

                                                            <input style="width: 100px" onkeyup="subTotalDiscountFun()"
                                                                type="number" id="subTotalDiscount" class="form-control"
                                                                value="0">
                                                        </th>
                                                    </tr>
                                                </tfoot>
                                                <tfoot>
                                                    <tr>

                                                       
                                                        <th></th>
                                                        <th></th>
                                                        <th>
                                                            <p class="text-center">Sub-total: $<span id="subTotal"></span> </p>
                                                        </th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>


                                    </div>
                                    <div class="col-md-12">
                                        <div class="pull-right mt-4 text-right">

                                            <div class="table-responsive">
                                                <table id="mainTable" class="table table-bordered table-striped m-b-0">

                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <select name="" id="" class="form-control"
                                                                    onmousedown="this.value='';"
                                                                    onchange="setOffer(this.value)">
                                                                    <option value="0  " selected>None</option>
