<!DOCTYPE html>
<head>

<title>E-Gift Card</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

<!-- CSS-->
<link rel="stylesheet" href="/css/user/css/style.css">
<link rel="stylesheet" href="/css/user/css/main-color.css" id="colors">

</head>

<body>

   <!-- Wrapper -->
   <div id="wrapper">

    <!-- Header Container
================================================== -->
    <header id="header-container" class="fixed fullwidth dashboard">

        <!-- Header -->
        
   <% if(user){ %>
	<%- include('./include/loginNavbar.ejs') %>
  <% } else{ %>
	<%- include('./include/navbar.ejs') %>
  <% }  %>
        <!-- Header / End -->
<!-- side Navbar -->
<%- include('./include/sideNavbar.ejs') %>
<!-- side Navbar -->


	<!-- Content
	================================================== -->
	<div class="dashboard-content">

		<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12">
					<h2>Package</h2>
					<!-- Breadcrumbs -->
					<nav id="breadcrumbs">
						<ul>
							<li><a href="#">Home</a></li>
							<li>Dashboard</li>
							<li>Wallet</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

	

		<div class="row">
			
			<!-- Invoices -->
			<div class="col-lg-12 col-md-12">
				<div class="dashboard-list-box invoices with-icons margin-top-20">
					<% if(gift.length) { %>
					<ul>
						<% for(i=0;i<gift.length;i++) { %>

                        <li>
                            <i class="list-box-icon fa fa-gift"></i>
                            <h4>E-gift Card Name: <span><%=gift[i].packageName%></span> <div class="comission-taken">Offer Price: <strong>$ <%=gift[i].price%></strong></div></h4>
                            <h4> <span class="text-danger">Shop Name: <%=gift[i].businessName%></span> <div class="comission-taken"> <a href="/details/<%=gift[i].businessName%>/<%=gift[i].businessMail%>" class="btn btn-info">View Shop</a> </div></h4>
                            <h4>Service: <%=gift[i].service%> <div class="comission-taken">  <% if(gift[i].status == 0) { %>
								Available
							<% } else if(gift[i].status == 1) {  %>
								Used
							<% } else { %>
								Cancled
							<% } %>  </h4>
                            <ul>
								<li class="paid">Booking Date: <%=gift[i].date%></li>
								<li class="unpaid">Valid Till: <%=gift[i].endDate%></li>
								<li> <strong>Token: #<%=gift[i].token%></strong> </li>
							</ul>
                        </li>
                    
						<% } %>
					</ul>
					<% } else{  %>
									 
						<div class="container">
							<div class="row">
								<div class="col-12">
									<h3 class="text-center">No Data Found</h3>
								</div>
							</div>
						</div>
						<%  } %>
				</div>
			</div>
						
		</div>

	</div>
	<!-- Content / End -->

</div>
<!-- Dashboard / End -->

</div>
<!-- Wrapper / End -->
							
 <!-- JS Include Start -->
 <%- include('./include/js.ejs') %>
 <!-- JS Include End -->

</body>
</html>