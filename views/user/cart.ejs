<%- include('./include/header.ejs') %>
</head> 

<body  onload="loader()">
	<div id="loader"> </div>
	<% if(user){ %>
		<%- include('./loginNavbar.ejs') %>
	  <% } else{ %>
		<%- include('./navbar.ejs') %>
	  <% }  %>
<!-- Print Button -->
<section class="page-content"> 
<a href="javascript:window.print()" class="print-button">Print this invoice</a>

<!-- Invoice -->
<div id="invoice">

	<!-- Header -->
	<div class="row">
		<div class="col-md-6">
			<div id="logo"><img src="<%=shop.img%>" alt=""></div>
		</div>

		<div class="col-md-6">	

			<p id="details">
				<strong>Booking ID:</strong> #<%=orderInfo[0].bookingID%> <br>
				<strong>Issued:</strong> <%=orderInfo[0].curDate%> <br>
			</p>
		</div>
	</div>


	<!-- Client & Supplier -->
	<div class="row">
		<div class="col-md-12">
			<h2>Invoice</h2>
		</div>

		<div class="col-md-6">	
			<strong class="margin-bottom-5">Supplier</strong>
			<p>
				<%=shop.businessName%> <br>
				21 St Andrews Lane <br>
				London, CF44 6ZL, UK <br>
			</p>
		</div>

		<div class="col-md-6">	
			<strong class="margin-bottom-5">Customer</strong>
			<p>
				<%=user.name%> <br>
				<%=user.address	%> <br>
			<br>
			</p>
		</div>
	</div>


	<!-- Invoice -->
	<div class="row">
		<div class="col-md-12">
			<table class="margin-top-20">
				<tr>
					<th>Description</th>
					<th>Quantity</th>
					<th>VAT</th>
					<th>Total</th>
				</tr>
				
				<% for(i=0;i<orderInfo.length;i++) { %> 
				<tr>
					<td><%=orderInfo[i].serviceName%></td> 
					<td>1</td>
					<td>$0.00</td>
					<td>$<%=orderInfo[i].servicePrice%></td>
				</tr>
				<% } %>
			</table>
		</div>
		
		<div class="col-md-4 col-md-offset-8">	
			<table id="totals">
				<tr>
					<th>Total Cost</th> 
					<th><span>$<%=cost%></span></th>
				</tr>
			</table>
		</div>
	</div>


	<!-- Footer -->
	<div class="row">
		<div class="col-md-12">
			<ul id="footer">
				<li><span>www.salondestyle.com</span></li>
				<li>salondestyle@example.com</li>
				<li>(123) 123-456</li>
			</ul>
		</div>
	</div>
		
</div>

</section>


<%- include('./include/script.ejs') %>
</body>
</html>
