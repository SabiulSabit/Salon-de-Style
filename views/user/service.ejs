    <style>
        /* The container */
        .serviceCheck {
            display: block;
            position: relative;
            padding-left: 35px;
            margin-bottom: 12px;
            cursor: pointer;
            font-size: 22px;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;

        }

        /* Hide the browser's default checkbox */
        .serviceCheck input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 0;
            width: 0;
        }

        /* Create a custom checkbox */
        .checkmark {
            position: absolute;
            top: 18px;
            left: 4px;
            height: 25px;
            width: 25px;
            background-color: #eee;
        }

        /* On mouse-over, add a grey background color */
        .serviceCheck:hover input~.checkmark {
            background-color: #ccc;
        }

        /* When the checkbox is checked, add a blue background */
        .serviceCheck input:checked~.checkmark {
            background-color: #f91942;
        }

        /* Create the checkmark/indicator (hidden when not checked) */
        .checkmark:after {
            content: "";
            position: absolute;
            display: none;
        }

        /* Show the checkmark when checked */
        .serviceCheck input:checked~.checkmark:after {
            display: block;
        }

        /* Style the checkmark/indicator */
        .serviceCheck .checkmark:after {
            left: 9px;
            top: 1px;
            width: 9px;
            height: 19px;
            border: solid white;
            border-width: 0 3px 3px 0;
            -webkit-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            transform: rotate(45deg);
        }

        .guestpanel {
            display: none;
        }

        .serviceChoose {
            padding: 5px;
            background-color: rgb(241, 240, 240);
            border-radius: 5px;
            border: 2px dashed #f91942;
        }

