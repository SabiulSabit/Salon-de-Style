<!DOCTYPE html>

<head>

	<!-- Basic Page Needs
================================================== -->
	<title>Search Results</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- CSS
================================================== -->
	<link rel="stylesheet" href="/css/user/css/style.css">
	<link rel="stylesheet" href="/css/user/css/main-color.css" id="colors">

</head>

<body>

	<% if(user){ %>
		<%- include('./loginNavbar.ejs') %>
			<% } else{ %>
				<%- include('./navbar.ejs') %>
					<% } %>

						<!-- Titlebar -->
						<section class="page-content">


							<!-- content -->
							<div class="container">
								<div class="row">
									<div class="col-md-12">

										<div class="row">

											<% if(shop.length==0){ %>
												<h1 class="text-center">No Shop Found</h1>
												<% } else{ %>
													<!-- Listing Item -->
													<h3>Serach Result:</h3>
													<hr>
													<% for(i=0;i<shop.length;i++) { %>
														<div class="col-lg-12 col-md-12 searchresult">

															<a
																href="/details/<%=shop[i].businessName%>/<%=shop[i].businessMail%>">
																
																<div class="row">
																	<div class="col-md-5 col-12">
																		<img class="align-self-center mr-3"
																			src="<%=shop[i].img%>" alt="search img"
																			width="90%" height="250px">
																	</div>
																	<div class="col-md-7 col-12">
																		<div class="media-body">
																			<h5 class="mt-0">
																				<%=shop[i].businessName%>
																			</h5>
																			<h6>
																				<%=shop[i].address%>
																			</h6>
																			<div class="rating"
																				data-rating="<%=shop[i].rating%>">
																				<div class="star"></div>
																				<div class="star"></div>
																				<div class="star"></div>
																				<div class="star"></div>
																				<div class="star"></div>
																				<span class="text-dark">(
																					<%=shop[i].total%> reviews)
																				</span>
																			</div>

																		</div>
																	</div>
																</div>
																
															</a>

														</div>
														<% } %>
															<% } %>


										</div>



									</div>

								</div>
							</div>

							<!-- Container / End -->



							<!-- Footer -->

							<%- include('./footer.ejs') %>

								<!-- Footer -->



								<!-- Scripts
================================================== -->
								<script type="text/javascript" src="/js/user/scripts/jquery-3.4.1.min.js"></script>
								<script type="text/javascript"
									src="/js/user/scripts/jquery-migrate-3.1.0.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/mmenu.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/chosen.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/slick.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/rangeslider.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/magnific-popup.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/waypoints.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/counterup.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/jquery-ui.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/tooltips.min.js"></script>
								<script type="text/javascript" src="/js/user/scripts/custom.js"></script>




</body>

</html>