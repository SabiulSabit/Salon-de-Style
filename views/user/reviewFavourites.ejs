<!DOCTYPE html>

<head>

	<!-- Basic Page Needs
================================================== -->
	<title>Listeo</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- CSS
================================================== -->
	<link rel="stylesheet" href="/css/user/css/style.css">
	<link rel="stylesheet" href="/css/user/css/main-color.css" id="colors">

</head>

<body>

	<!-- Wrapper -->
	<div id="wrapper">

		<!-- Header Container
	================================================== -->
		<header id="header-container" class="fixed fullwidth dashboard">

			<!-- Header -->
		
			<% if(user){ %>
				<%- include('./loginNavbar.ejs') %>
			  <% } else{ %>
				<%- include('./navbar.ejs') %>
			  <% }  %>
			<!-- Header / End -->
			<!-- side Navbar -->
			<%- include('./sideNavbar.ejs') %>
			<!-- side Navbar -->


			<!-- Content
	================================================== -->
			<div class="dashboard-content">

				<!-- Titlebar -->
				<div id="titlebar">
					<div class="row">
						<div class="col-md-12">
							<h2>Reviews</h2>
							<!-- Breadcrumbs -->
							<nav id="breadcrumbs">
								<ul>
									<li><a href="#">Home</a></li>
									<li><a href="#">Dashboard</a></li>
									<li>Reviews</li>
								</ul>
							</nav>
						</div>
					</div>
				</div>

				<div class="row">

					<!-- Listings -->
					<div class="col-lg-12 col-md-12">
						<div class="dashboard-list-box margin-top-0">
							<h4>Your Reviews</h4>
							<!-- Reply to review popup -->
							<div id="small-dialog" class="zoom-anim-dialog mfp-hide">
								<div class="small-dialog-header">
									<h3>Reply to review</h3>
								</div>
								<div class="message-reply margin-top-0">
									<textarea cols="40" rows="3"></textarea>
									<button class="button">Reply</button>
								</div>
							</div>
							<% if(review.length) { %>
							<ul>
								<%  for(let i =0 ; i<review.length ;i++ ){ %>
								<li>
									<div class="comments listing-reviews">
										<ul>
											<li>
												<div class="avatar"><img src="<%=review[i].img%>" alt="" /> </div>
												<div class="comment-content">
													<div class="arrow-comment"></div>
													<div class="comment-by">Your review <div
															class="comment-by-listing own-comment">on <a href="#">
																<strong><%=review[i].businessName%></strong> </a></div>
														     <span class="date"><%=review[i].businessName%> Address</span><span class="date"><%=review[i].date%></span>
														<div class="star-rating" data-rating="<%=review[i].rating%>"></div>
													</div>
													<p><%=review[i].review%></p>
													<!-- <a href="#small-dialog" class="rate-review popup-with-zoom-anim"><i
															class="sl sl-icon-note"></i>Edit</a> -->
												</div>

											</li>
										</ul>
									</div>
								</li>
								<% } %>

							</ul>
							<% } else{  %>
									 
								<div class="container">
									<div class="row">
										<div class="col-12">
											<h3 class="text-center">No Data Found</h3>
										</div>
									</div>
								</div>
								<%  } %>
						</div>
					</div>

				</div>

			</div>
			<!-- Content / End -->


	</div>
	<!-- Dashboard / End -->


	</div>
	<!-- Wrapper / End -->


	<!-- Scripts
================================================== -->
	<script type="text/javascript" src="/js/user/scripts/jquery-3.4.1.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/jquery-migrate-3.1.0.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/mmenu.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/chosen.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/slick.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/rangeslider.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/magnific-popup.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/waypoints.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/counterup.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/jquery-ui.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/tooltips.min.js"></script>
	<script type="text/javascript" src="/js/user/scripts/custom.js"></script>


</body>

</html>